@model SBDProject.Models.Player

@{
    ViewBag.Title = "Szczegóły zawodnika";
}

<h2>Szczegóły zawodnika</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imię
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
           Nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Gra od
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayingFrom)
        </dd>

        <dt>
            Gra do
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayingTo)
        </dd>

        <dt>
           Pozycja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.Name)
        </dd>

        <dt>
            Nazwa drużyny
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Usuń", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
    @Html.ActionLink("Powrót do listy zawodników", "Index", null, new { @class = "btn btn-primary" })
</p>
