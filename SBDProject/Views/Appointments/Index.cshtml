@model IEnumerable<SBDProject.Models.Appointment>

@{
    ViewBag.Title = "Lista meczy";
}

<h2>Lista meczy</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Dodaj nowe spotkanie", "Create", null, new { @class = "btn btn-primary" })
    }
</p>
<table class="table">
    <tr>
        <th>
            Data spotkania
        </th>
        <th>
            Gospodarze
        </th>
        <th>
            Goście
        </th>
        <th>
            Lokalizacja
        </th>
        <th>
            Frekfencja
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1.Name)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendance)
            </td>
            <td>           
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class="btn btn-primary"})
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }          
            </td>
        </tr>
    }

</table>
