@model IEnumerable<SBDProject.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h1 class="alert-info col-md-12 text-center">DRUŻYNY</h1>
@foreach (var team in Model)
{
    <h2>@team.Name</h2>
    <a href="@Url.Action("Index","Players", new {teamId = team.Id })">
        <img class="img-responsive logo" src="@Url.Content(team.Logo)">
    </a>
}
<div style="clear:both"></div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Logo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
