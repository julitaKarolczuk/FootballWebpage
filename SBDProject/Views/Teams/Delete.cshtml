@model SBDProject.Models.Team

@{
    ViewBag.Title = "Delete";
}

<h2>Uwuwanie drużyny: @Model.Name</h2>

<h3>Czy na pewno usunąć drużynę?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Nazwa drużyny
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Logo)
        </dt>

        <dd>
           <img src="@Url.Content(Model.Logo)"
        </dd>

        <dt>
            Nazwa lokalizacji
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger" />
            @Html.ActionLink("Powrót do listy drużyn", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
