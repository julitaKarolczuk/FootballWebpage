@model SBDProject.Models.Tournament

@{
    ViewBag.Title = "Details";
}

<h1 class="alert-info col-md-12 text-center header">MECZE</h1>

@if (User.IsInRole("admin"))
{
    @Html.ActionLink("Dodaj nowy mecz", "Create", "Appointments", null, new { @class = "btn btn-primary" });
}
<table class="table table-responsive">
    <tr>
        <th>
            Data Meczu
        </th>
        <th>
            Gospodarz
        </th>
        <th>
            Gość
        </th>
        <th>
            Lokalizacja
        </th>

        <th></th>
    </tr>

    @foreach (var app in Model.Appointment)
    {
        <tr>
                <td>@app.AppointmentDate</td>
                <td>@app.Team</td>
                <td>@app.Team1</td>
                <td>@app.Location.Name</td>
        </tr>
    }

</table>
